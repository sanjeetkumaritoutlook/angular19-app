{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2018"],
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./.build",
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "cdk.out"
  ]
}